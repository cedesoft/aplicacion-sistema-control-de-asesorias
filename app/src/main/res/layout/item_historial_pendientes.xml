<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_asesorias_pendientes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/txt_materia_asesoria_pendiente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:textColor="#090909"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/txt_docente_asesoria_pendiente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_materia_asesoria_pendiente"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txt_tema_asesoria_pendiente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_docente_asesoria_pendiente"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txt_estado_asesoria_pendiente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_tema_asesoria_pendiente"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txt_fecha_asesoria_pendiente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_estado_asesoria_pendiente"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_terminar"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="140dp"
                android:layout_marginEnd="220dp"
                android:layout_weight="1"
                android:background="@drawable/verde"
                android:text="Terminar"
                android:textColor="#030404"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_cancelar_asesoria"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="140dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:background="#03FFFFFF"
                android:text="Cancelar"
                android:textColor="#2196F3"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_detalles"
                android:layout_width="66dp"
                android:layout_height="31dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="140dp"
                android:layout_marginEnd="120dp"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                android:text="Detalles"
                android:textColor="#2196F3"
                android:textSize="12sp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>