<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_solicitudes_recibidas"
        android:layout_width="match_parent"
        android:layout_height="214dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_materia_solicitud_recibida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:textColor="#0B0B0B"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/txt_unidad_solicitud_recibida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_materia_solicitud_recibida"
                android:layout_weight="1"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txt_tema_solicitud_recibida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_unidad_solicitud_recibida"
                android:layout_weight="1"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txt_fecha_solicitud_recibida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_tema_solicitud_recibida"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txt_situacion_solicitud_recibida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_fecha_solicitud_recibida"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txt_docente_solicitud_recibida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_situacion_solicitud_recibida"
                android:textSize="18sp" />

            <Button
                android:id="@+id/aceptar_solicitud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="24dp"
                android:layout_weight="1"
                android:background="#00020202"
                android:text="Aceptar"
                android:textColor="#2196F3"
                android:textSize="12sp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>