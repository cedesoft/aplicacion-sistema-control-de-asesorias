<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_materias"
        android:layout_width="match_parent"
        android:layout_height="128dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/materia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/docente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/materia"
                android:textSize="18sp" />

            <Button
                android:id="@+id/detalles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="258dp"
                android:layout_marginBottom="14dp"
                android:background="#00FFFFFF"
                android:text="Mas detalles"
                android:textColor="#2196F3" />

            <Button
                android:id="@+id/solicitud"
                android:layout_width="158dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="17dp"
                android:layout_marginBottom="18dp"
                android:background="@drawable/verde"
                android:text="solicitar asesoria" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>