<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_solicitudes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_materia_solicitud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:textColor="#0B0B0B"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/txt_unidad_solicitud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_materia_solicitud"
                android:layout_weight="1"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txt_tema_solicitud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_unidad_solicitud"
                android:layout_weight="1"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txt_fecha_solicitud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_tema_solicitud"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txt_situacion_solicitud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_fecha_solicitud"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txt_docente_solicitud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_situacion_solicitud"
                android:textSize="18sp" />

            <Button
                android:id="@+id/cancelar_solicitud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="140dp"
                android:layout_marginEnd="32dp"
                android:layout_weight="1"
                android:background="#00020202"
                android:text="Cancelar"
                android:textColor="#2196F3"
                android:textSize="12sp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>